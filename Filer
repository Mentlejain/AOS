#include<stdio.h>
#include<errno.h>
#include<stdlib.h>
#include<string.h>
#include <stdio.h>
#include <unistd.h>
#include <sys/syscall.h>
#include <sys/types.h>
#include <fcntl.h>

int main(int argc,char* argv[])
{
	char op[2];
	char ch[1];
	printf("c create a file\nr read a file\nw write to a file\no open a file\nq quit\n");
	do
	{	
		printf("\n$ ");
		scanf("%s",op);
		switch (op[0])
		{
			case 'c':
				char fname[20];
				printf("\r\b ");
				scanf("%s",fname);
				int file=syscall(85,fname,O_CREAT);
				if (file==-1)
				{
					printf("Cannot create file\n");
				}
				else
				{
					printf("File created successfully\n");
				}
			case 'r':
				break;
			default:
			printf("Invalid argument");
		}
	printf("Continue? [y/n] ");
	scanf("%s",ch);
	}while(strcmp(ch,"y")==0);
}